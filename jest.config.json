{
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "node_modules",
    "interfaces",
    ".styles.ts",
    ".interfaces.ts",
    "<rootDir>/src/shared",
    "<rootDir>/src/react-app-env.d.ts",
    "<rootDir>/src/reportWebVitals.ts",
    "<rootDir>/src/setupTests.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage/",
  "coverageThreshold": {
    "global": {
      "branches": 20,
      "functions": 30,
      "lines": 50,
      "statements": 50
    }
  },
  "verbose": false,
  "testEnvironment": "jsdom"
}